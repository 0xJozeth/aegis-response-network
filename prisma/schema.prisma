generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model InventoryItem {
  id          String   @id @default(uuid())
  sku         String   @unique
  name        String
  category    String   // e.g., "Medical", "Food", "Shelter"
  quantity    Int      @default(0)
  warehouseId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}